<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_swipe_refresh_instruction"
        android:textColor="@color/orange_brown"
        android:background="@drawable/border_box_bottom_border_green"
        android:padding="12dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/standard_layout_margin"
        android:layout_marginStart="@dimen/standard_layout_margin">
    <include
        layout="@layout/layout_items_list"/>
    </LinearLayout>
</LinearLayout>