<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.FavoRecipe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>

        <item name="colorPrimaryVariant">@color/darker_green</item>
        <item name="colorOnPrimary">@color/orange_brown</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/darker_green</item>
        <item name="colorOnSecondary">@color/orange_brown</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionBarTheme">@style/ThemeOverlayFavoRecipe.Actionbar</item>
    </style>

    <style name="ThemeOverlayFavoRecipe.Actionbar" parent="ThemeOverlay.MaterialComponents.ActionBar" >
        <item name="android:textColorPrimary">@color/orange_brown</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>